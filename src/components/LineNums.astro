---
export interface Props {
  lines: number;
  class?: string;
}

function* nums(limit: number) {
  for (let i = 1; i <= limit; i = i + 1) {
    yield i;
  }
}

const content = Array.from(nums(Astro.props.lines)).join("\n");
---

<div
  class:list={["not-prose flex flex-col w-6 select-none", Astro.props.class]}
>
  <pre
    role="presentation"
    class="absolute inset-y-0 right-0 max-w-[3ch] overflow-hidden text-right font-mono text-sm leading-relaxed text-red-300 dark:text-red-900"
    set:text={content}
  />
  <div
    class="pointer-events-none absolute bottom-0 right-0 h-20 w-[3ch] select-none bg-gradient-to-t from-stone-50 bg-blend-multiply transition-all dark:from-stone-900"
  >
  </div>
</div>
